@{
    ViewBag.Title = "Home Page";
    if (Context.User.Identity.IsAuthenticated)
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "/Views/Shared/_NotLoggedLayout.cshtml";
    }
}

@model Samochody.ViewModels.AccountViewModel

<div class="container">
    <h1 class="h1">Witaj w skupie aut</h1>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @ViewBag.Error
        <table class="table">
            <tr>
                <td>@Html.LabelFor(model => model.Account.Username)</td>
                <td>@Html.TextBoxFor(model => model.Account.Username)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Account.Password)</td>
                <td>@Html.PasswordFor(model => model.Account.Password)</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td><input class="btn btn-info" type="submit" value="Login" /> </td>
            </tr>
        </table>
    }
</div>